@model IEnumerable<PurchaseOrder>

@{
    ViewBag.Title = "Purchase Order Tracker";
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

<div class="btn-group">
    @Html.ActionLink("Add New", "New", "PurchaseOrders", null, new { @class = "btn btn-default" })
</div>

<table class="table table-striped display nowrap" id="dt" width="100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(_ => _.FirstOrDefault().Priority)</th>
            <th>@Html.DisplayNameFor(_ => _.FirstOrDefault().Status)</th>
            <th>@Html.DisplayNameFor(_ => _.FirstOrDefault().Date)</th>
            <th>@Html.DisplayNameFor(_ => _.FirstOrDefault().Unit)</th>
            <th>@Html.DisplayNameFor(_ => _.FirstOrDefault().Category)</th>
            <th>@Html.DisplayNameFor(_ => _.FirstOrDefault().Meal)</th>
            <th>@Html.DisplayNameFor(_ => _.FirstOrDefault().Vendor)</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => order.Priority)</td>
                <td>@Html.DisplayFor(_ => order.Status)</td>
                <td>@Html.DisplayFor(_ => order.Date)</td>
                <td>@Html.DisplayFor(_ => order.Unit)</td>
                <td>@Html.DisplayFor(_ => order.Category)</td>
                <td>@Html.DisplayFor(_ => order.Meal)</td>
                <td>@Html.DisplayFor(_ => order.Vendor)</td>
            </tr>
        }
    </tbody>
</table>